

<section class="container">
    {{# emailDuplicado}}
        <p class="invalid-feedback">{{emailDuplicado}}</p>
    {{/emailDuplicado}}
    {{# usernameDuplicado}}
        <p class="invalid-feedback">{{usernameDuplicado}}</p>
    {{/usernameDuplicado}}
    <!-- <form action="../recibirImagen.php" method="POST" enctype="multipart/form-data"> -->
    <h2 class="mb-4 text-center">Formulario de registro</h2>
    <article class="p-5 bg-dark-subtle rounded">
        <div class="d-flex justify-content-center">
            <form class="row w-50 form-yolose" action="index.php?module=registro&action=register" method="POST" enctype="multipart/form-data">
                <div class="col-6 ps-0">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" name="nombre" class="form-control" />
                </div>
                <div class="col-6 pe-0">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" name="apellido" class="form-control">
                </div>

                <div class="col-6 ps-0">
                    <label for="nacimiento" class="form-label">Fecha de nacimiento</label>
                    <input type="date" name="nacimiento" class="form-control">
                </div>
                <div class="col-6 pe-0">
                    <label for="sexo" class="form-label">Sexo</label>
                    <select name="tipo" id="tipo" class="form-select">
                        <option value="1">Masculino</option>
                        <option value="2">Femenino</option>
                        <option value="3">Prefiero no carcarlo</option>
                    </select>
                </div>

                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" class="form-control">

                <label for="archivo" class="form-label">Foto de Perfil</label>
                <input type="file" name="archivo" class="form-control" >

                <label for="coordenadas">Seleccione su ubicacion</label>
                <input type="text" name="coordenadas" id="coordenadas" placeholder="coordenadas" class="form-control">

                <div id="map" style="width: 100%; height: 500px; "></div>
                <script>
                    var map = L.map('map').setView([-34.667890, -58.565806 ], 13);
                    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        maxZoom: 19,
                        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
                    }).addTo(map);

                    var popup = L.popup();
                    function onMapClick(e) {
                        popup
                                .setLatLng(e.latlng)
                                .setContent("You clicked the map at " + e.latlng.toString())
                                .openOn(map);

                        var coordenadaString = e.latlng.toString();
                        var numerosCoordenada = coordenadaString.match(/-?[\d\.]+/g);

                        var inputNombre = document.getElementById("coordenadas");
                        inputNombre.value = numerosCoordenada;
                    }
                    map.on('click', onMapClick);

                </script>


                <label for="usuario" class="form-label">Usuario</label>
                <input type="text" name="usuario" class="form-control" />

                <label for="password" class="form-label">Contraseña</label>
                <input type="password" name="password" class="form-control">

                <label for="password2" class="form-label">Repetir Contraseña</label>
                <input type="password" name="password2" class="form-control">

                <div class="mt-3 text-end">
                    <button type="submit" name="Enviar" class="btn btn-yolose px-5">Enviar</button>
                </div>
            </form>
        </div>
    </article>
</section>