<div class="bg-inicio">
    <section class="mx-5 py-5">
        <article>
            {{# emailDuplicado}}
            <p class="invalid-feedback">{{emailDuplicado}}</p>
            {{/emailDuplicado}}
            {{# usernameDuplicado}}
            <p class="invalid-feedback">{{usernameDuplicado}}</p>
            {{/usernameDuplicado}}
            <!-- <form action="../recibirImagen.php" method="POST" enctype="multipart/form-data"> -->
            <h2 class="mb-4 text-center text-logo">FORMULARIO DE REGISTRO</h2>
        </article>
        <article class="border-yolose w-50 m-auto">
            <div class="d-flex justify-content-center">
                <form class="form-yolose p-5" action="/registro/register" method="POST"
                    enctype="multipart/form-data">
                    <article class="row">
                        <div class="col-md-6 ps-md-0">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" name="nombre" class="form-control" required />
                        </div>
                        <div class="col-md-6 pe-md-0">
                            <label for="apellido" class="form-label">Apellido</label>
                            <input type="text" name="apellido" class="form-control" required>
                        </div>
    
                        <div class="col-md-6 ps-md-0">
                            <label for="nacimiento" class="form-label">Fecha de nacimiento</label>
                            <input type="date" name="nacimiento" class="form-control" required>
                        </div>
                        <div class="col-md-6 pe-md-0">
                            <label for="sexo" class="form-label">Sexo</label>
                            <select name="tipo" id="tipo" class="form-select" required>
                                <option value="1">Masculino</option>
                                <option value="2">Femenino</option>
                                <option value="3">Prefiero no carcarlo</option>
                            </select>
                        </div>
    
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" required>
    
                        <label for="archivo" class="form-label">Foto de Perfil</label>
                        <input type="file" name="archivo" class="form-control" required>
    
                        <label for="descripcion" class="form-label">Pais</label>
                        <input type="text" name="descripcion" placeholder="descripcion" class="form-control" required>
                    </article>

                    <div class="justify-content-center mt-4">
                        <article class="p-2 p-md-5 bg-secondary rounded">
                            <label for="usuario" class="form-label">Usuario</label>
                            <input type="text" name="usuario" class="form-control" required />

                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" name="password" class="form-control" required>

                            <label for="password2" class="form-label">Repetir Contraseña</label>
                            <input type="password" name="password2" class="form-control" required>
                        </article>
                    </div>
                    <div class="d-flex justify-content-around">
                        <a href="/home" class="btn-yolose volver px-5 py-2">Volver</a>
                        <button type="submit" name="Enviar" class="btn-yolose px-5 py-2 ms-md-3">Enviar</button>
                    </div>
                </form>
            </div>
        </article>
    </section>
</div>