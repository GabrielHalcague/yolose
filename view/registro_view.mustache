<section class="container py-5">
    {{# emailDuplicado}}
        <p class="invalid-feedback">{{emailDuplicado}}</p>
    {{/emailDuplicado}}
    {{# usernameDuplicado}}
        <p class="invalid-feedback">{{usernameDuplicado}}</p>
    {{/usernameDuplicado}}
    <!-- <form action="../recibirImagen.php" method="POST" enctype="multipart/form-data"> -->
    <h2 class="mb-4 text-center text-logo">FORMULARIO DE REGISTRO</h2>
    <article class="border-yolose">
        <div class="d-flex justify-content-center">
            <form class="row form-yolose p-5" action="/registro/register" method="POST" enctype="multipart/form-data">
                <div class="col-6 ps-0">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" name="nombre" class="form-control" />
                </div>
                <div class="col-6 pe-0">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" name="apellido" class="form-control">
                </div>

                <div class="col-6 ps-0">
                    <label for="nacimiento" class="form-label">Fecha de nacimiento</label>
                    <input type="date" name="nacimiento" class="form-control">
                </div>
                <div class="col-6 pe-0">
                    <label for="sexo" class="form-label">Sexo</label>
                    <select name="tipo" id="tipo" class="form-select">
                        <option value="1">Masculino</option>
                        <option value="2">Femenino</option>
                        <option value="3">Prefiero no carcarlo</option>
                    </select>
                </div>

                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" class="form-control">

                <label for="archivo" class="form-label">Foto de Perfil</label>
                <input type="file" name="archivo" class="form-control" >
                
                <p>Aca va el mapa con los paises</p>
                <input type="text" name="descripcion" placeholder="descripcion" class="form-control">

                <hr>

                <label for="usuario" class="form-label">Usuario</label>
                <input type="text" name="usuario" class="form-control" />

                <label for="password" class="form-label">Contraseña</label>
                <input type="password" name="password" class="form-control">

                <label for="password2" class="form-label">Repetir Contraseña</label>
                <input type="password" name="password2" class="form-control">

                    <button type="submit" name="Enviar" class="btn btn-yolose px-5 py-2">Enviar</button>
            </form>
        </div>
    </article>
</section>