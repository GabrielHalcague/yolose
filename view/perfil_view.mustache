{{#perfil}}
     {{# showQR}}
<section class="container">
    <article class="row text-center">
        <div class="col-6">

            <div id="map" style="max-height: 500px; max-width: 500px; "></div>
            <script>
                var map = L.map('map').setView([{{coordenadas}} ], 13);
                L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 25,
                }).addTo(map);
                L.circle([{{coordenadas}} ], {radius: 200}).addTo(map);
            </script>
        </div>

        <div class="col-6">
            {{rutaQR}}"
                    <img src="{{rutaQR}}"
                         class="img-fluid responsive"
                         alt="">
        </div>
    </article>
</section>
 {{/showQR}}
