<section class="container">
    <h2 class="mb-4 text-center">Preguntas de editor</h2>
    <h3>Tabla de editor</h3>

    <table class="table table-striped table-hover">

        <thead class="table-primary">
        <tr>
            <th>Pregunta</th>
            <th>Accion</th>
            <th>Categoria</th>
            <th>Reportes</th>
            <th>Estado</th>
        </tr>
        </thead>
        <tbody>
        {{#preguntas}}
            <tr>
                <td>{{preg}}</td>
                <td><a href="/editor/verPregunta?pregunta={{id}}" class="btn btn-outline-primary" role="button">Editar</a> </td>
                <td>{{categ}}</td>
                <td>{{cantReporte}} <a href="/editor/verQuienReporto?pregunta={{id}}" class="btn btn-outline-primary" role="button">
                    Ver</a> </td>
                <td>{{descr}}</td>
            </tr>
        {{/preguntas}}
        </tbody>
    </table>

    <a href="/" class="btn btn-primary">Volver</a>
</section>