<section class="container">

    <div class="row">
        <div class="col-6">
            <h1 class="text-center">Jugador: <strong class="text-primary">{{username}}</strong></h1>
        </div>
        <div class="col-6">
            <h1 class="text-center">Puntaje: <strong class="text-primary">{{score}}</strong></h1>
        </div>
    </div>
    <h2 class="text-center {{color}}">{{pregunta}}</h2>

    <article class="row flex-column">
        {{#opc}}
            <div class="col-12 text-center my-3">
                <button type="button" name="{{id}}" id="{{id}}" style="min-height: 5rem; min-width: 20rem;"
                        class="btn btn-primary" value="{{id}}"> {{resp}}
                </button>
            </div>
        {{/opc}}
    </article>

    <a role="button" id="fin" class="btn btn-danger py-3" href="/partida/finalizarPartida" style="display: none;">Fin</a>
    <a role="button" id="continuar" class="btn btn-success py-3" href="/partida" style="display: none;">Continuar</a>
</section>

<!-- Modal -->
<div class="modal fade" id="ventana" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modelTitleId">Juego Finalizado</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <h4 class="text-center">Has Finalizado Tu Partida</h4>
                    <p>Jugador: <strong class="text-primary">{{username}}</strong></p>
                    <p>Puntaje: <strong class="text-primary">{{score}}</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>