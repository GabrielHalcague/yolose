<div class="bg-tienda"> 
    <section class="container">
        <div class="text-center text-white pt-5">
            <h1>METODO DE PAGO</h1>
            <h4>Usted a seleccionado: <strong>{{producto}}</strong></h4>
        </div>
        <br>
        <div class="container px-8" style="padding-left: 100px">
            <div class="row gx-2">
                <div class="col-sm-4">
                    <div class="cardCredit">
                        <div class="cardCredit__front cardCredit__part">
                            <img class="cardCredit__front-square cardCredit__square" src="/public/img/bbva.png">
                            <img class="cardCredit__front-logo cardCredit__logo" src="/public/img/visa.png">
                            <p class="cardCredit_numer">**** **** **** 6258</p>
                            <div class="cardCredit__space-75">
                                <span class="cardCredit__label">Titular de la tarjeta</span>
                                <p class="cardCredit__info">{{#firstname}}{{firstname}}{{/firstname}}
                                    {{#surname}}{{surname}}{{/surname}}</p>
                            </div>
                            <div class="cardCredit__space-25">
                                <span class="cardCredit__label">Expira</span>
                                <p class="cardCredit__info">10/25</p>
                            </div>
                        </div>
                        <div class="cardCredit__back cardCredit__part">
                            <div class="cardCredit__black-line"></div>
                            <div class="cardCredit__back-content">
                                <div class="cardCredit__secret">
                                    <p class="cardCredit__secret--last">420</p>
                                </div>
                                <img class="cardCredit__back-square cardCredit__square" src="/public/img/banelco.png">
                                <img class="cardCredit__back-logo cardCredit__logo" src="/public/img/PLUS.png">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div>
                            <form action="/tienda/confirmarPago" method="post">
                                <div class="card">
                                    <div class="card-header gradient-custom text-black">
                                        <h5 class="my-1">Ingrese los datos de su tarjeta</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="name" class="form-label">Nombre del titular</label>
                                                    <input class="form-control" id="name" name="titular" type="text"
                                                        value="{{#firstname}}{{firstname}}{{/firstname}} {{#surname}}{{surname}}{{/surname}}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="ccnumber" class="form-label">NÃºmero de tarjeta</label>
                                                    <div class="input-group">
                                                        <input class="form-control" name="nroTarjeta" type="text"
                                                            placeholder="0000 0000 0000 0000" autocomplete="email"
                                                            value="4000111100006258">
                                                        <div class="input-group-append">
                                                            <span class="input-group-text" style="height: 40px">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                                                    height="16" fill="currentColor"
                                                                    class="bi bi-credit-card" viewBox="0 0 16 16">
                                                                    <path
                                                                        d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1H2zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V7z" />
                                                                    <path
                                                                        d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1z" />
                                                                </svg></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
    
                                        <div class="row">
                                            <div class="form-group col-sm-4">
                                                <label for="vencimiento" class="form-label">Vencimiento</label>
                                                <input class="form-control" type="text" id="vencimiento" name="vencimiento"
                                                    placeholder="10/25" value="10/25">
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label for="cvv" class="form-label">CVV/CVC</label>
                                                    <input class="form-control" id="cvv" name="ccv" type="text"
                                                        placeholder="123" value="420">
                                                </div>
                                            </div>
                                        </div>
    
                                    </div>
                                    <div class="card-footer" style="text-align: right">
                                        {{#error}}
                                        <div style="color: red">{{error}}</div>
                                        {{/error}}
                                        <button class="btn btn-success btn-m px-5" type="submit">
                                            <i class="mdi mdi-gamepad-circle"></i>Pagar
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <a href="/" class="btn-yolose p-3 my-5 w-50 m-auto">Ir al incio</a>
            </div>
        </div>
    </section>
</div>